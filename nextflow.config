manifest {
    mainScript = "main.nf"
    defaultBranch = "master"
    nextflowVersion = ">=19.04.0"
}



params {
    conda_env = "gemprep"

    input_dir = "input"
    fpkm_txt = "*.fpkm.txt"
    raw_txt = "*.raw.txt"
    tpm_txt = "*.tpm.txt"
    emx_txt = "*.emx.txt"
    labels_txt = "*.labels.txt"

    output_dir = "output"

    convert_txt_npy = false

    normalize = false
    normalize_np = 8
    normalize_log2 = true
    normalize_kstest = true
    normalize_quantile_py = false
    normalize_quantile_r = true

    visualize = false
    visualize_density = true
    visualize_tsne = true
    visualize_tsne_na = -1000
    visualize_tsne_npca = 50

    partition = false
    partition_npartitions = 10
    partition_method = "random"
}



report {
    enabled = true
    file = "${params.output_dir}/reports/report.html"
}



timeline {
    enabled = true
    file = "${params.output_dir}/reports/timeline.html"
}



trace {
    enabled = true
    fields = "task_id,hash,native_id,process,tag,name,status,exit,module,container,cpus,time,disk,memory,attempt,submit,start,complete,duration,realtime,queue,%cpu,%mem,rss,vmem,peak_rss,peak_vmem,rchar,wchar,syscr,syscw,read_bytes,write_bytes"
    file = "${params.output_dir}/reports/trace.txt"
    raw = true
}



docker {
    runOptions = "--init --gpus all"
}



singularity {
    runOptions = "--nv"
    autoMounts = true
}



process {
    container = "systemsgenetics/gemprep"
    echo = true

    cpus = 1
    memory = 8.GB

    withName:normalize {
        cpus = { params.normalize_np }
        memory = 16.GB
    }
}



profiles {
    conda {
        process.beforeScript = "source activate ${params.conda_env}"
    }

    docker {
        docker.enabled = true
    }

    palmetto {
        process {
            executor = "pbspro"
            time = 1.h

            withName:normalize {
                cpus = null
                memory = null
                time = 72.h
                clusterOptions = "-l select=${params.normalize_np}:ncpus=1:mpiprocs=1:mem=16gb"
            }

            module = "anaconda3/5.1.0-gcc"
        }
    }

    singularity {
        singularity.enabled = true
    }

    standard {
        process.executor = "local"
    }
}
